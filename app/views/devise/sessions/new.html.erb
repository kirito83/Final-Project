<div class='signup'>
  <h1>CONNEXION</h1>

  <%= form_for(resource, as: resource_name, url: sign_in_path) do |f| %>
  <div class="field">
    <%= f.label :email, class: 'label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label 'Mot de passe', class: 'label' %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label 'Se souvenir de moi', class: 'label' %>
  </div>
  <% end -%>

  <br>

  <div class="actions">
    <%= f.submit "Se connecter", class: 'btn' %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>