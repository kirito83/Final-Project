<div class="navbar w-nav">
  <div class="container-2 w-container"><%= link_to image_tag "Ease-1.png", root_path, width: "86", class: "image" %></div>
  <%= link_to "Créer un tournois", new_tournament_path, class: "link-2custom hvr-ripple-in" %>
  <% if signed_in? %>
  <div class="dropdown">
<button onclick="myFunction()" class="dropbtn">Mon compte &#8964;</button>
  <div id="myDropdown" class="dropdown-content">
    <%= link_to 'Profil', show_path, class: "dropdown-link w-dropdown-link" %>
    <a href="#" class="dropdown-link-3 w-dropdown-link">Mes tournois</a>
    <%= link_to 'Déconnexion', sign_out_path, class: "dropdown-link-2 w-dropdown-link", method: :delete %>
  </div>
</div>
  <% else %>
  <%= link_to 'Connexion', sign_in_path, class: "link-sign-in hvr-ripple-in" %>
  <% end %>
</div>
<div class='signup'>
  <div class="title"> <h1>CONNEXION</h1> </div>

  <%= form_for(resource, as: resource_name, url: sign_in_path) do |f| %>
  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
      <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
  </div> 
  <br>

  <div class="input-group">
      <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
      <%= f.password_field :password, class: 'form-control', placeholder: "Mot de passe" %>
    </div>
    <br>

  <% if devise_mapping.rememberable? -%>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label 'Se souvenir de moi', class: 'label' %>
  </div>
  <% end -%>


  <br><br>

  <div class="actions">
    <%= f.submit "Se connecter", class: 'btn' %>
  </div>
  <% end %>
  <br>
  <br>

  <div class="links">
    <%= render "devise/shared/links" %>
  </div>
</div>