<div class='form_new_t'>
  <%= form_with(model: tournament, local: true) do |form| %>
  <% if tournament.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(tournament.errors.count, "erreur") %> empêche ce tournoi d'être sauvegardé:</h2>

    <ul>
      <% tournament.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
      <%= form.text_field :title, id: :tournament_title, class: 'form-control', placeholder: "Titre" %>
  </div> 

  <br>


  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
      <%= form.text_area :description, id: :tournament_description, class: 'form-control', placeholder: "Description" %>
  </div> 

  <br>

  <div class="field">
    <%= form.label :date, class: 'label' %><br>
    <%= form.datetime_select :date, id: :tournament_date %>
  </div>

  <br>

  <div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-ruble"></i></span>
      <%= form.number_field :pricepool, id: :tournament_pricepool, class: 'form-control', placeholder: "Prix d'entrée" %>
  </div> 

  <br>
  <div class="actions">
    <%= form.submit 'Sauvegarder le tournoi', :class => 'btn' %>
  </div>
  <% end %>
</div>