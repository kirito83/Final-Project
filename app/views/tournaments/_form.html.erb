<div class='form_new_t'>
  <%= form_with(model: tournament, local: true) do |form| %>
  <% if tournament.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(tournament.errors.count, "erreur") %> empêche ce tournoi d'être sauvegardé:</h2>

    <ul>
      <% tournament.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

  <div class="field">
    <%= form.label 'Titre', class: 'label' %><br>
    <%= form.text_field :title, id: :tournament_title %>
  </div>

  <div class="field">
    <%= form.label 'Déscription', class: 'label' %><br>
    <%= form.text_area :description, id: :tournament_description %>
  </div>

  <div class="field">
    <%= form.label :date, class: 'label' %><br>
    <%= form.datetime_select :date, id: :tournament_date %>
  </div>

  <div class="field">
    <%= form.label 'Prix', class: 'label' %><br>
    <%= form.number_field :pricepool, id: :tournament_pricepool %>
  </div>

  <br>

  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>
</div>